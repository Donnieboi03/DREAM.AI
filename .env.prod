# DREAM.AI Production Configuration
# Copy to .env and adjust for your deployment

# Environment
ENVIRONMENT=production
DEBUG=false

# Python
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# AI2-THOR
AI2THOR_HEADLESS=1
AI2THOR_TIMEOUT=30

# FastAPI
FASTAPI_LOG_LEVEL=info
FASTAPI_WORKERS=1
FASTAPI_RELOAD=false

# Database (if you add one later)
# DATABASE_URL=postgresql://user:password@db:5432/dreamai

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CORS
CORS_ORIGINS=["http://localhost", "http://yourdomain.com", "https://yourdomain.com"]

# LLM Integration (optional)
# GEMINI_API_KEY=your-api-key
# OPENAI_API_KEY=your-api-key

# Storage (optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=dreamai-storage
